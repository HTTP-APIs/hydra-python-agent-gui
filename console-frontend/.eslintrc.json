{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "arrowFunctions": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "require-jsdoc": 0,
        "max-len" : [1,
             {
                 "ignoreComments": true,
                 "code": 120
            }],
        "camelcase": 0,
        "react/prop-types": 0,
        "no-invalid-this": 0,
        "guard-for-in": 0,
        "prefer-const": ["error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "no-unused-vars": ["error", { "args": "none" }],
        "no-console": 0
    }
}